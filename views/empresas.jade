extends layout

block content
	.navbar.navbar-default#mainnav(role="navigation")
		.navbar-header
			a.navbar-brand(href="#") AT

	.container
		.row
			h1.text-center AT Empresas
			h4.text-center Registrate			
			.col-md-6.col-md-offset-3
				form#form-create2(action="/empresas/new", method="post")
					.row
						.col-md-6
							input#name.form-control(type="text", autcoapitalize="on",name="name",placeholder="Nombre Local")
						.col-md-6
							select.form-control(name="type")
								option Discoteca
								option Bar
								option Lounge
								option Pub
					
					p
					input#username.form-control(type="text", name="username",placeholder="Email")
					p
					input#password.form-control(type="password", name="password",placeholder="Contrasena")
					p
					input#confirm_password.form-control(type="password", name="confirm_password",placeholder="Repite contrasena")
					p
					input.btn.btn-primary.btn-lg(type="submit", value="Ingresar")


	script(src="/js/jquery.js")
	script(src="/js/bootstrap.js")
	script(src="/js/jquery.validate.min.js")
	script(src="/js/mine.js")				